block var
  - var metas = {}
  - var uri = {}
  - var googleAnalyticsTrackingCode = undefined // 'UA-XXXXXXXX-Y'
  - var googleTagManagerContainerId = undefined // 'GTM-00XXXX'
- var canonical = uri.protocol + '://' + uri.domain + '/' + uri.folder  // https://www.gylp.jp/zawazawa/
- var webURL = uri.protocol + '://' + uri.domain '/' // https://www.gylp.jp/
- var url = uri.domain + '/' + uri.folder // www.gylp.jp/zawazawa/

doctype html
html(lang="ja")
  head
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    block title
      title= metas.title
    block meta
      meta(name="description", content=metas.description)
      meta(name="keywords", content=metas.keywords)
      meta(name="author", content=metas.author)
      meta(name="robots", content=metas.robots)
      meta(property="og:title", content=metas.title)
      meta(property="og:type", content="website")
      meta(property="og:url", content=canonical)
      meta(property="og:image", content=webURL+'img/faceobook.png')
      meta(property="og:site_name", content=metas.site_name)
      meta(property="og:description", content=metas.description)
    block link
      link(rel="canonical", href=canonical)
    block head_script
      //- include google-analytics
      //- include google-tag-manager-at-head
      //- if isDevelopment
        script(src="/js/simple-auth.js")
  body
    block body_start
      //- include google-tag-manager-at-body
    block content
    block foot
    block body_end

